<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:noNamespaceSchemaLocation="CamelSchema.xsd">
    <bean id="webCamBean" class="org.jboss.qa.camel.WebCamBean">
        <property name="picturesDirectory" value="/var/www/pictures"/>
        <property name="outName" value="picture"/>
        <property name="baseUrl" value="http://cubieboard/pictures"/>
    </bean>
    <camelContext>
        <route>
            <from uri="gpio://ph7?value=HIGH" />
            <to uri="1bean:webCamBean?method=getPicture" />
            <to uri="2mqtt://iot-demo?host=tcp://localhost:1883&amp;publishTopicName=IotDemo"/>
            <to uri="3aaaa:webCamBean?method=getPicture" />
            <to uri="4bbbb://iot-demo?host=tcp://localhost:1883&amp;publishTopicName=IotDemo"/>
            <to uri="5cccc:webCamBean?method=getPicture" />
            <to uri="6dddd:webCamBean?method=getPicture" />
        </route>
    </camelContext>
</beans>