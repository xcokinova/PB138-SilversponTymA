<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:camel="http://camel.apache.org/schema/spring" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.springframework.org/schema/beans">
    <bean id="webCamBean" class="org.jboss.qa.camel.WebCamBean">
        <property name="picturesDirectory" value="/var/www/pictures"/>
        <property name="outName" value="picture"/>
        <property name="baseUrl" value="http://cubieboard/pictures"/>
    </bean>
    <camelContext trace="false" xmlns="http://camel.apache.org/schema/spring">
        <route customId="true" id="iot-door-bell-route">
            <from uri="gpio://ph7?value=HIGH" />
            <to uri="1bean:webCamBean?method=getPicture" />
            <to uri="2mqtt://iot-demo?host=tcp://localhost:1883&amp;publishTopicName=IotDemo"/>
            <to uri="3aaaaa:webCamBean?method=getPicture" />
            <to uri="4bbbbb://iot-demo?host=tcp://localhost:1883&amp;publishTopicName=IotDemo"/>
            <to uri="5ccccc:webCamBean?method=getPicture" />
            <to uri="6ddddd:webCamBean?method=getPicture" />
        </route>
    </camelContext>
</beans>